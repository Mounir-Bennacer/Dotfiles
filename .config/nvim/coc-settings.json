  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/",".git/",".hg/"],
      "filetypes": ["go"],
      "initializationOptions":{
        "usePlaceholder":true
      }
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"],
      "ignoredRootPaths": ["~"]
    }
  },
  "coc.preferences.useQuickfixForLocations": true,
  "coc.preferences.jumpCommand": "vsp",
  "coc.preferences.rootPatterns": [".git", ".hg", "pyproject.toml", "setup.py", ".venv", ".env", "package.json"],
  "diagnostic.locationlist": true,
  "diagnostic.messageTarget": "echo",
  "signature.target": "echo",
  "suggest.floatEnable": true,
  "coc.preferences.hoverTarget": "echo",
  "coc.preferences.formatOnSaveFiletypes": ["python"],
  "coc.source.buffer.enable": false,
  "coc.source.around.enable": false,
  // Disable linting (using ALE)
  "tsserver.enableJavascript": false,
  "eslint.enable": false,
  "python.formatting.provider": "black",
  "python.linting.flake8Enabled": true,
  "python.linting.pylintEnabled": false,
  "python.venvFolders": ["envs", ".pyenv", ".env", ".venv", ".venv3", ".direnv"],
    //diagnostic
    "diagnostic.signOffset": 9999999,
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": true,
    //Snippet
    "coc.preferences.snippetStatusText": "â“ˆ ",
    //CocList
    "list.source.outline.defaultOptions": ["--auto-preview"],
    //prettier
    "prettier.statusItemText": "â“Ÿ ",
    "prettier.eslintIntegration": true,
    "prettier.tslintIntegration": true,
    "prettier.stylelintIntegration": true,
    //emmet
    "emmet.includeLanguages": {"vue-html": "html", "javascript": "javascriptreact"},
    //multiple curssors
    "cursors.nextKey": "<C-n>",
    "cursors.previousKey": "<C-p>",
    "cursors.cancelKey": "<esc>",
    // coc-explorer
    "explorer.icon.expanded": "â–¾",
    "explorer.icon.collapsed": "â–¸",
    "explorer.width": 30,
    "explorer.icon.enableNerdfont": true,
    "explorer.keyMappings": {
        "h" : "gotoParent",
        "l" : "expandOrShrink"
    },
    // eslint
    "eslint.filetypes": ["javascript", "typescript", "typescriptreact", "javascriptreact", "typescript.tsx"],
    "eslint.autoFix": true,
    "eslint.autoFixOnSave": true,
    // python
    "python.jediEnabled": false,
  "python.venvPath": "~/.local/share/virtualenvs"
}





